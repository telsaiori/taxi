<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal signup_form', role: 'form'}) do |f| %>
  <%= devise_error_messages! %>
    <div class="field form-group">
      <%= f.label :email, class: 'col-sm-2 control-label'%>
      <div class= "col-sm-10">
        <%= f.email_field :email, class: 'form-control', autofocus:true  %>
      </div>

    </div>

    <div class="field form-group">
      <%= f.label :password,"密碼", class: 'col-sm-2 control-label'  %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class= "col-sm-10">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'%>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation,"確認密碼", class: 'col-sm-2 control-label' %>
      <div class= "col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :name,"姓名", class: 'col-sm-2 control-label' %>
      <div class= "col-sm-10">
        <%= f.text_field :name, class: 'form-control'%>
      </div>
    </div>

    <div class="field form-group" >
      <%= f.label :"Gender: ", "性別", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
      <%= f.radio_button :gender, :man, class: "radio-inline required"%> 
      <%= f.label :man,"男", class: 'radio-inline'%>
      <%= f.radio_button :gender, :woman%> 
      <%= f.label :woman,"女", class: 'radio-inline'%>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :id,"身分證字號", class: 'col-sm-2 control-label' %>
      <div class= "col-sm-10">
        <%= f.text_field :id_no, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :Address,"地址", class: 'col-sm-2 control-label' %>
      <div class= "col-sm-10">
        <%= f.text_field :address, class: 'form-control' %>
      </div>
    </div>

     <div class="field form-group">
      <%= f.label :TEL,"電話號碼", class: 'col-sm-2 control-label' %>
      <div class= "col-sm-10">
        <%= f.phone_field :tel, class: 'form-control' %>
      </div>
    </div>

    <div class="actions form-group">
      <%= f.submit "註冊", class: 'btn btn-primary center-block' %>
    </div>

<% end %>

<%= render "devise/shared/links" %>
